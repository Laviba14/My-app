<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    android:gravity="center"
    android:padding="16dp">

    <!-- Register Title -->
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:textColor="@android:color/black" />

    <!-- Username field -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="@android:drawable/spinner_background"
        android:drawableLeft="@drawable/baseline_person_24"
        android:textColor="#0E0D10"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <!-- Email field -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="#0E0D10"
        android:textColorHint="@color/black"
        android:background="@android:drawable/spinner_background"
        android:drawableLeft="@drawable/baseline_email_24"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp" />

    <!-- Password field with Eye Icon inside the box -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@android:drawable/spinner_background"
            android:drawableLeft="@drawable/baseline_lock_outline_24"
            android:textColor="#0E0D10"
            android:textColorHint="@color/black" />

        <ImageView
            android:id="@+id/iv_toggle_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_visibility_24"
            android:contentDescription="Toggle Password Visibility"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Confirm Password field with Eye Icon inside the box -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:background="@android:drawable/spinner_background"
            android:drawableLeft="@drawable/baseline_lock_open_24"
            android:textColor="#0E0D10"
            android:textColorHint="@color/black" />

        <ImageView
            android:id="@+id/iv_toggle_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_visibility_24"
            android:contentDescription="Toggle Confirm Password Visibility"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Phone number field -->
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:textColor="#0E0D10"
        android:textColorHint="@color/black"
        android:background="@android:drawable/spinner_background"
        android:drawableLeft="@drawable/baseline_contact_mail_24"
        android:inputType="phone"
        android:layout_marginBottom="16dp" />

    <!-- Register button -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Register" />

    <!-- Redirect to login screen -->
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Already have an account? Login here"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp" />

</LinearLayout>
