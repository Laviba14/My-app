<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="2">

    <!-- First Product Layout -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/pizza"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$9.99"
            android:textSize="14sp"
            android:layout_marginTop="5dp" />

        <!-- Quantity Selector -->
        <Spinner
            android:id="@+id/quantity_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
        android:entries="@array/quantity_options" />

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/add_to_cart_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
        android:text="Add to Cart"
        android:layout_marginTop="10dp" />
    </LinearLayout>

    <!-- Second Product Layout -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/product_image2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/pizza"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/product_price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$9.99"
            android:textSize="14sp"
            android:layout_marginTop="5dp" />

        <!-- Quantity Selector -->
        <Spinner
            android:id="@+id/quantity_spinner2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/quantity_options" />

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/add_to_cart_button2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add to Cart"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>
