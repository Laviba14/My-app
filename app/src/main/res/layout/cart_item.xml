<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Checkbox for selection -->
    <CheckBox
        android:id="@+id/cart_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:paddingStart="8dp" />

    <!-- Image for cart item -->
    <ImageView
        android:id="@+id/cart_item_image"
        android:layout_width="79dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/background" />

    <!-- Item details (name, price, quantity, buttons) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Name of the item -->
        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Item Name"
            android:textSize="16sp" />

        <!-- Price of the item -->
        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="$10.00"
            android:textSize="14sp" />

        <!-- Quantity and Buttons for increment and decrement -->
        <TextView
            android:id="@+id/cart_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 1" />

        <!-- Buttons for increment and decrement -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/cart_item_increment_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_add_24"
                android:contentDescription="Increase Quantity" />

            <ImageButton
                android:id="@+id/cart_item_decrement_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_remove_24"
                android:contentDescription="Decrease Quantity"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Delete item button (icon) -->
    <ImageButton
        android:id="@+id/cart_item_remove_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_delete_24"
        android:contentDescription="Remove Item" />
</LinearLayout>
